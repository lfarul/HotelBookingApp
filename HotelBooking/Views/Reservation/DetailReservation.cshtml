@model HotelBooking.Models.Reservation
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "DetailReservation";
}

<img src="~/Images/HotelAssist.JPG" align="left" height="140" width="110" />
<h5>Szczegóły Twojej rezerwacji @UserManager.GetUserAsync(User).Result.FirstName</h5>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckInDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckInDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckOutDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckOutDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>

    </dl>
</div>
<div>
    <a asp-controller="Reservation" asp-action="EditReservation" class="btn btn-outline-primary btn-sm" asp-route-id="@Model.ReservationID">Edytuj</a>
    <input type="button" onclick="history.go(-1)" value="Powrót" class="btn btn-outline-secondary btn-sm" />
    <a asp-controller="Reservation" asp-action="ReservationPDF" class="btn btn-outline-secondary btn-sm" asp-route-id="@Model.ReservationID">Wydruk do PDF</a>
</div>
