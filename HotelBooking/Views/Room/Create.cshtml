@model HotelBooking.ViewModels.RoomCreateViewModel


@{
    ViewData["Title"] = "Create";
}
<h4>Dodaj nowy pokój do oferty</h4>
<hr />
<form enctype="multipart/form-data" asp-controller="Room" asp-action="Create" method="post" class="mt-3">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomNumber" class="control-label"></label>
                <input type ="number" asp-for="RoomNumber" class="form-control" value="1" min="1" />
                <span asp-validation-for="RoomNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                @Html.TextArea("Description", null, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="Photo" class="form-control custom-file-input" placeholder="Zdjęcie" />
                    <label class="custom-file-label">Załącz zdjęcie...</label>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-outline-primary">Dodaj</button>
                    <input type="button" onclick="history.go(-1)" value="Powrót" class="btn btn-outline-secondary" />
                </div>
            </div>
        </div>
    </div>

    @section site {
        <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);
                        });
                    });
        </script>
    }
</form>


