@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Home Page";
}


@if (!(SignInManager.IsSignedIn(User)))
{
    <div class="text-center">
        <p>
            <font face="courier" size="+3" color="darkgray">
            </font>
    </div>
    <br />
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel" data-interval="2000">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleSlidesOnly" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleSlidesOnly" data-slide-to="1"></li>
            <li data-target="#carouselExampleSlidesOnly" data-slide-to="2"></li>
            <li data-target="#carouselExampleSlidesOnly" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Images/Slides/pexels-photo-1001965.jpg" alt="First slide">
                <div class="carousel-caption d-md-block">
                    <font size="13" face="Lucida Console" color="white">Stylowe wnętrze</font>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/Slides/pexels-photo-3144580.jpg" alt="Second slide">
                <div class="carousel-caption d-md-block">
                    <font size="13" face="Lucida Console" color="white">Komfort</font>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/Slides/pexels-photo-2883047.jpg" alt="Fourth slide">
                <div class="carousel-caption d-md-block">
                    <font size="13" face="Lucida Console" color="white">Strefa spotkań</font>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/Slides/pexels-photo-1267320.jpg" alt="Fifth slide">
                <div class="carousel-caption d-md-block">
                    <font size="13" face="Lucida Console" color="white">Wspaniała kuchnia</font>
                </div>
            </div>
        </div>
    </div>
}

